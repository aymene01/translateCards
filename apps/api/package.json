  "main": "index.js",
  "scripts": {
    "build": "esbuild src/bin/api.ts --bundle --platform=node --target=node14 --outfile=dist/api.js",
    "dev": "pnpm prisma generate && nodemon --delay 1000s --exec 'node -r esbuild-register src/bin/api.ts' -e ts",
