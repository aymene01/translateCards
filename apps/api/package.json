    "esbuild": "^0.19.7",
    "esbuild-register": "^3.5.0",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@translatecard/toolbox": "*",
    "cors": "^2.8.5",
